"editor.tokenColorCustomizations": {
    "textMateRules": [
        {
            "scope": "entity.name.type.class",
            "settings": {
                "foreground": "#4EC9B0"  // Cyan/light blue for class names (like PrismaCloudAPI, CallCounter)
            }
        },
        {
            "scope": "entity.name.function",
            "settings": {
                "foreground": "#DCDCAA"  // Soft yellow for function names (like __init__)
            }
        },
        {
            "scope": "variable.parameter",
            "settings": {
                "foreground": "#9CDCFE"  // Light blue for function parameters
            }
        },
        {
            "scope": "string",
            "settings": {
                "foreground": "#CE9178"  // Muted light red/orange for strings (matching standard Python strings)
            }
        },
        {
            "scope": "comment",
            "settings": {
                "foreground": "#6A9955",  // Greenish yellow for comments
                "fontStyle": "italic"
            }
        },
        {
            "scope": "keyword",
            "settings": {
                "foreground": "#569CD6"  // Blue for Python keywords like 'class', 'def'
            }
        },
        {
            "scope": "constant.numeric",
            "settings": {
                "foreground": "#B5CEA8"  // Light green for numbers
            }
        },
        {
            "scope": "punctuation.definition.string",
            "settings": {
                "foreground": "#D4D4D4"  // Standard contrast for string punctuation
            }
        },
        {
            "scope": "storage.type",
            "settings": {
                "foreground": "#C586C0"  // Lavender for storage type keywords like 'self', 'class'
            }
        },
        {
            "scope": "meta.function-call",
            "settings": {
                "foreground": "#D7BA7D"  // Soft gold/yellow for function calls
            }
        },
        {
            "scope": "meta.docstring",
            "settings": {
                "foreground": "#DCDCAA",  // Soft yellow for docstrings
                "fontStyle": "italic"
            }
        },
        {
            "scope": "support.function.builtin",
            "settings": {
                "foreground": "#FFB86C"  // Light orange for built-in functions like 'print', etc.
            }
        },
        {
            "scope": "entity.other.attribute-name",
            "settings": {
                "foreground": "#9CDCFE",  // Light blue for attributes
                "fontStyle": "italic"
            }
        },
        {
            "scope": "variable",
            "settings": {
                "foreground": "#9CDCFE"  // Light blue for general variables
            }
        }
    ]
}
